
<% @user = current_user %>
            <!-- <section> -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                                <div class="card card-user">
                                    <div class="card-image">
                                        <img src="/_MG_1462.jpg" alt="...">
                                    </div>
                                    <div class="card-body">
                                        <div class="author">
                                            <a href="#">
                                                <img class="avatar border-gray" src="https://github.com/<%= current_user.github %>.png" alt="...">
                                                <h5 class="title"><%= current_user.name %></h5>
                                            </a>
                                            <p class="description">
                                                <%= current_user.nickname %>
                                            </p>
                                        </div>
                                        <p class="description text-center">
                                            <% @random = rand(CoolPhrase.all.length) + 1%>
                                            <%= CoolPhrase.find_by_id(@random).phrase %>
                                        </p>
                                    </div>
                                    <hr>
                                    <div class="button-container mr-auto ml-auto">
                                        <a href="https:/github.com/<%= current_user.github %>" class="btn btn-simple btn-link btn-icon">
                                            <i class="fa fa-github"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Editar Perfil</h4>
                                </div>
                                <div class="card-body">
                                    <%= form_for(@user, url: update_user_path(user_id: @user.id)) do |form| %>
                                <% if @user.errors.any? %>
                                    <div id="error_explanation">
                                    <h2 style="color: #AE1400">(<%= pluralize(@user.errors.count, "error") %>) Ao salvar os dados:</h2>

                                    <ul>
                                    <% @user.errors.full_messages.each do |message| %>
                                        <li style="color: #AE1400"><%= message %></li>
                                    <% end %>
                                    </ul>
                                    </div>
                                <% end %>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Nome: </label>
                                                    <%= form.text_field :name, class:"form-control ", value: current_user.name  %>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Github: </label>
                                                    <%= form.text_field :github, class:"form-control ", value: current_user.github  %>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Username</label>
                                                    <%= form.text_field :nickname, required: true, class:"form-control ", value: current_user.nickname  %>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>E-mail: </label>
                                                    <%= form.text_field :email, required: true, class:"form-control ", value: current_user.email  %>
                                                </div>
                                            </div>                                            
                                        </div>
                                        <div class="row">
                                             <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Senha: </label>
                                                    <%= form.password_field :password, required: true, class:"form-control " %>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Confirmar Senha: </label>
                                                    <%= form.password_field :password_confirmation, required: true, class:"form-control " %>
                                                </div>
                                            </div>
                                        </div>
                                        <%# <div class="row">
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label>City</label>
                                                    <input type="text" class="form-control" placeholder="City" value="Mike">
                                                </div>
                                            </div>
                                            <div class="col-md-4 px-1">
                                                <div class="form-group">
                                                    <label>Country</label>
                                                    <input type="text" class="form-control" placeholder="Country" value="Andrew">
                                                </div>
                                            </div>
                                            <div class="col-md-4 pl-1">
                                                <div class="form-group">
                                                    <label>Postal Code</label>
                                                    <input type="number" class="form-control" placeholder="ZIP Code">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>About Me</label>
                                                    <textarea rows="4" cols="80" class="form-control" placeholder="Here can be your description" value="Mike">Lamborghini Mercy, Your chick she so thirsty, I'm in that two seat Lambo.</textarea>
                                                </div>
                                            </div>
                                        </div> %>
                                        <%= form.submit "Editar", class:"btn btn-info btn-fill pull-right" %>
                                        <div class="clearfix"></div>
                                    
                            <% end %>
                                </div>
                            </div>
                        </div>
                            
                    </div>
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <nav>
                        <ul class="footer-menu">
                        </ul>
                        <p class="copyright text-center">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            <a href="pedro-miranda.herokuapp.com">Pedro Miranda</a>, feito com muito amor para todos.
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>

    

