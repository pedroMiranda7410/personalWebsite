                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Objetivo: </label>
                                                    <textarea class="mdhtmlform-md" style="height:400px; width:100%;"># Escreva seus Textos em modo Markdown!</textarea>
                                                    <%= form.text_area :objective, class:"mdhtmlform-html", style:"display: none;" %>
                                                </div>
                                            </div>
                                        </div>
                                        <%= form.submit "Criar", class:"btn btn-info btn-fill pull-right" %>
                                        <div class="clearfix"></div>
                                    
                            <% end %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
